{
  "name": "server",
  "version": "1.0.0",
  "description": "dmc",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server",
    "client": "npm start --prefix client",
    "installClient": "npm i --prefix client",
    "installApp": "npm i",
    "installWeb": "set NODE_ENV=development&& npm i concurrently && concurrently \"npm run installApp\" \"npm run installClient\"",
    "dev": "set NODE_ENV=development&& concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false && cd client  && npm install --prefix client && npm run build --prefix client",
    "clientTest": "npm test --prefix client -- --watchAll=false ",
    "test": "mocha --exit",
    "testAll": "set NODE_ENV=development&& concurrently \"npm run clientTest \" \"npm run test \""
  },
  "author": "Abrar",
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "canvas": "^2.8.0",
    "chai-http": "^4.3.0",
    "cloudinary": "^1.26.2",
    "concurrently": "^6.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "datauri": "^3.0.0",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "jquery": "^3.6.0",
    "jsbarcode": "^3.11.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.27.0",
    "mongoose": "^5.9.24",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "multer-storage-cloudinary": "^4.0.0",
    "multiparty": "^4.2.2",
    "nodemon": "^2.0.7",
    "popper.js": "^1.16.1",
    "react-chartjs-2": "^3.0.4",
    "react-cookies": "^0.1.1",
    "react-popper": "^2.2.5",
    "react-signature-pad-wrapper": "^1.3.0",
    "socket.io": "^4.1.3",
    "stripe": "^8.92.0",
